    <script>
        function AddToCart(slug,closeModal) {
            $.post("/Shop/AddToCart", { slug: slug }, function (data) {
                if (data >0) {
                    UpdateBadge(data);
                    UpdateCart();
                    if (closeModal) {
                        $(closeModal).modal("hide");
                    }
                 
                  
                }
                else {
                    alert("Bir hata oluştu,lütfen tekrar deneyiniz.");
                }
                
            }).fail(function () {
                alert("Beklenmeyen bir hata oluştu,lütfen tekrar deneyiniz.")
                });

        }
        function RemoveFromCart(slug) {
            $.post("/Shop/RemoveFromCart", { slug: slug }, function (data) {

                UpdateBadge(data);
                UpdateCart();
            }).fail(function () {
                alert("Beklenmeyen bir hata oluştu,lütfen tekrar deneyiniz.")
            });
        }
        function UpdateBadge(data) {
            if ($('#cartBadge').html() != null) {
                $("#cartBadge").html(data);
            } else {
                $("#shoppingCart").after('<span id= "cartBadge" class="badge" style="background-color: red;font-size:xx-small;vertical-align:super;line-height:15px;color:white;font-weight:normal; height:20px;">' + data + '</span>');
                             
                     
            }
            if (data == 0) {
                $("#cartBadge").remove();
            }
        }
        function UpdateCart() {
            $.post("/Shop/Cart", function (data) {
                $("#layoutShoppingCart").html(data);
            });
        }
    </script>
